@model IEnumerable<MoviesAndMagic.Areas.Admin.Models.Show>

@{
    ViewBag.Title = "Index";
}

@if (TempData["message"] != null)
{
    <div class="alert alert-success">@TempData["message"]</div>
}

<h2>Index for Shows</h2>
<ol class="breadcrumb">
    <li>@Html.ActionLink("Admin", "Index", "AdminDashboard")</li>
    <li class="active">Shows List</li>
</ol>
<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-default" })
</p>
<table class="table table-bordered table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FilmName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CinemaCity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShowTimeFilm)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CinemaCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FilmName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShowTimeFilm)
            </td>
            <td>
                @Html.ActionLink(" Edit", "Edit", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-primary glyphicon glyphicon-pencil" })
                @Html.ActionLink(" Delete", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-danger glyphicon glyphicon-trash" })
            </td>
        </tr>
    }

</table>
