@model MoviesAndMagic.Areas.Admin.Models.Show

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm("Create", "Show", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Show</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.CinemaCity, "Cinema", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(c => c.CinemaId, (List<SelectListItem>)ViewBag.Cinemas, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CinemaId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FilmName, "Film", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(f => f.FilmId, (List<SelectListItem>)ViewBag.Films, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FilmId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ShowTimeFilm, "ShowTimeFilm", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(s => s.ShowTimeFilmId, (List<SelectListItem>)ViewBag.ShowTimeFilms, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ShowTimeFilmId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

    <div class ="panel-footer">
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
